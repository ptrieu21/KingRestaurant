
<section>
  <div class="card">
    <div class="row">

      <div class="col-md-5">
        <div class="card-img-top post-img">
        	<style>
					.post-img{
						background: url(<%= asset_path @food_item.img_url %>) center no-repeat;
						
					}
					</style>
        </div>
      </div>

      <div class="col-md-7 post-body">
        <div class="card-block">
          <h2 class="card-title"><%= @food_item.name %> - <%= @food_item.cuisine.name %> </h2>
          <p class="card-text">
        		<i class="fa fa-eye"></i>
						<%= @food_item.impressionist_count %>
            &nbsp;&nbsp;
            <i class="fa fa-comments"></i>
            <%= @food_item.reviews.count %>
            &nbsp;&nbsp;
            <i class="fa fa-star"></i>
            <%= @food_item.average_rate%>
    
        	</p>
        </div>
        <ul class = "list-group list-group-flush">
          <li class="list-group-item">
	          <p class="card-text post-description"><%= @food_item.description %></p>
					</li>
					<li class="list-group-item">
            <%= number_to_currency(@food_item.price, format: "%n%u", unit:"VND") %>
					</li>

					<li class="list-group-item">
	          <%= button_to 'Add order',line_items_path(food_item_id: @food_item), {form_class: 'form order', class: "btn btn-outline-primary", remote: true} %>
					</li>
				</ul>
    </div>
  </div>
</section>

<section class="review">
  <div class="card">
    <ul class="list-group list-group-flush">
      
        <%= render @food_item.reviews %>
      
    </ul>

    <div class="card-block">
      <%= render "reviews/form", review: Review.new %>
    </div>
  </div>
</section>
