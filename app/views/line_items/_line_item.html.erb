
  
  <li class="list-group-item">  
    <div class="row">
      <div class="col-sm-3">
        <%= image_tag(line_item.food_item.img_url, class:"img-fluid") %>
      </div>
      <div class="col-sm-4">
        <p><%= line_item.food_item.name %></p>
        <p><%= link_to "Remove", line_item, method: :delete %></p>
      </div>
     
      <div class="col-sm-3">
        
          <%= number_to_currency(line_item.food_item.price, locale: :vi) %>
        
      </div>


      <div class="col-sm-2">
      <%= form_for(line_item, method: :patch) do |f| %>
        <div class="input-group input-group-sm">
          <div class="input-group-prepend">
            <%= link_to "-", line_item_decrease_path(line_item), method: :patch, 
                class: "btn btn-outline-secondary btn-block"%>
          </div>
          <%= f.text_field :quantity, class: "form-control", value: line_item.quantity %>
          <div class="input-group-append">
            <%= link_to "+", line_item_increase_path(line_item), method: :patch, 
                class: "btn btn-outline-secondary btn-block"%>
          
          </div>
        </div>  
      <% end %> 
      </div>
    </div>
  </li>
